<MusicScreen>:
    name : "musicscreen"
    id : "musicscreen"
    Image:
        source: 'Image/splash(3).png'

        # Giving the size of image
        size_hint: None,None
        size: "420dp", "320dp"
        pos_hint: {'center_x':0.5,"center_y":0.8}

        # allow stretching of image
        allow_stretch: True

    MDLabel:
        text:'Download Youtube Songs'
        font_name: "Poppins-Black.ttf"
