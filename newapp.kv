<MainScreen>:
    name : 'mainscreen'

    Image:
        source: 'Image/splash(3).png'

        # Giving the size of image
        size_hint: None,None
        size: "420dp", "320dp"
        pos_hint: {'center_x':0.5,"center_y":0.8}

        # allow stretching of image
        allow_stretch: True

    MDLabel:
        id:profile_name
        text:'Get information about your phone number'
        font_name: "Poppins-Black.ttf"
        font_size : "28sp"
        halign : 'center'
        pos_hint : {'center_y':0.6}


    MDTextField:
        id:number_text_fied
        pos_hint: {'center_x':0.5,'center_y':0.4}
        size_hint: (0.8,0.1)
        input_filter : "int"
        hint_text : 'Enter Phone Number'
        helper_text: 'Required'
        helper_text_mode: 'on_error'
        icon_right: 'cellphone'
        multiline: False
        icon_right_color: app.theme_cls.primary_color
        #required : True

    MDFloatingActionButton:
        id: third_disabled
        disabled: True
        icon:'arrow-right'
        md_bg_color:app.theme_cls.primary_color
        pos_hint: {'center_x':0.88, 'center_y':0.08}
        user_font_size: '30sp'
        on_press:
            root.manager.current = 'infotable'
            app.find_info()

    MDFloatingActionButton:
        icon:'arrow-left'
        md_bg_color:app.theme_cls.primary_color
        pos_hint: {'center_x':0.12, 'center_y':0.08}
        user_font_size: '30sp'
        on_press:
            root.manager.current = 'homescreen'

    MDFloatingActionButton:
        icon:'account-check'
        md_bg_color:app.theme_cls.primary_color
        pos_hint: {'center_x':0.5, 'center_y':0.25}
        user_font_size: '30sp'
        on_press:
            app.check_number()



